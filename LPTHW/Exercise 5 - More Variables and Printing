my_name = 'Gary F. Maddsion'
my_age = 48
my_height = 163 # cm's
my_weight = 96 # KG
my_eyes = 'Blue'
my_teeth = 'white'
my_hair = 'Ginger'

print(f"Lets talk about {my_name}")
print(f"He's {my_height} cm's tall")
print(f"He's {my_weight} KG")
print('He is a little overweight')
print(f"He's got {my_eyes} eyes and {my_hair} hair")
print(f"His teeth are usually {my_teeth}")

total = my_age + my_height + my_weight
print(f"If I add my age {my_age}, my height {my_height}, and my weight {my_weight} I get {total}")





